<form id="connection-form" action="/login" method="POST" class="h-full w-full md:w-96 flex flex-col p-6 items-center space-y-8">
    <div class="text-slate-700 text-3xl">
        Server Connection
    </div>
    <div class="flex flex-col w-full md:w-96">
        <div class="flex items-center space-x-2">
            <label for="passphrase" class="font-semibold text-slate-700 text-md self-start">Passphrase</label>
            <span class="text-sm text-slate-700">(not sent to the server)</span>
        </div>
        <input id="passphrase" minlength=1 name="passphrase" type="text" placeholder="onion fur tree freeway rabbit"
            class="border text-slate-700 focus:outline-none border-slate-700 h-12 w-full md:w-96 bg-transparent p-2 rounded-md" />
    </div>
    <div class="flex flex-col w-full md:w-96">
        <div class="flex items-center space-x-2">
            <label for="fingerprint" class="font-semibold text-slate-700 text-md self-start">Account</label>
            <span class="text-sm text-slate-700">(generated automatically if empty)</span>
        </div>
        <input id="fingerprint" minlength=1 name="fingerprint" type="text" placeholder="9400-9146-6372-9197"
            class="border text-slate-700 focus:outline-none border-slate-700 h-12 w-full md:w-96 bg-transparent p-2 rounded-md" />
    </div>
    <button type="submit" class="bg-slate-700 h-12 w-full md:w-96 text-slate-100 rounded-md hover:bg-slate-600">
        Connect
    </button>
</form>
<script type="module" src="/assets/app.js"></script>